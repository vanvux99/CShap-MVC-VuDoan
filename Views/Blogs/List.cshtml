@model CShap_MVC_VuDoan.Models.Blogs
@{
    ViewBag.Title = "List";
}

@using (Html.BeginForm())
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TITLE)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CATEGORY)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PUBLICS)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LOCATIONS)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DATE_PUBLIC)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.ShowAllBlogs)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TITLE)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CATEGORY)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PUBLICS)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LOCATIONS)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DATE_PUBLIC)
                    </td>
                    
                    <td>
                        @*delete*@
                    </td>
                </tr>
            }

    </table>
    <p>
        @Html.ActionLink("Edit", "Edit")
    </p>
    <p>
        @Html.ActionLink("New", "New")
    </p>
    <p>
        @Html.ActionLink("Search", "Search")
    </p>
}

